{
  "name": "telegram-language-buddy-bot",
  "description": "A Telegram bot for language translation and learning",
  "repository": "https://github.com/DeltaDe-Dirac/telegram-language-buddy-bot",
  "keywords": ["python", "telegram", "bot", "translation"],
  "env": {
    "FLASK_ENV": {
      "description": "Flask environment",
      "value": "production"
    },
    "DATABASE_URL": {
      "description": "PostgreSQL database URL (auto-set by Heroku PostgreSQL addon)",
      "required": true
    }
  },
  "addons": [
    "heroku-postgresql:mini"
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  }
}
