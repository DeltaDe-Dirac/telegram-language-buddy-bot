{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: src.main (debug mode)",
            "type": "debugpy",
            "request": "launch",
            "module": "src.main",
            "justMyCode": false,
            "env": {
                "FLASK_ENV": "development"
            }
        },
        {
            "name": "Python: src.main (production mode)",
            "type": "debugpy",
            "request": "launch",
            "module": "src.main",
            "justMyCode": false,
            "env": {
                "FLASK_ENV": "production"
            }
        },
        {
            "name": "Python: Run All Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/",
                "-v"
            ],
            "justMyCode": false,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Run Current Test File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}",
                "-v"
            ],
            "justMyCode": false,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Run Tests with Coverage",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/",
                "-v",
                "--cov=src",
                "--cov-report=html",
                "--cov-report=term"
            ],
            "justMyCode": false,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}